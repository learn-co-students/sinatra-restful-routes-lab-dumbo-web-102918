<form action="/recipes" method="POST">
  <label for="name">Recipe Name: </label>
  <input type="text" name="recipe[name]" id="name"/>
  <p><label for="ingredients">Ingredients: </label>
  <input type="text" name="recipe[ingredients]" id="ingredients"/>
  <p><label for="cook_time">Cook Time: </label>
  <input type="text" name="recipe[cook_time]" id="cook_time"/>
  <input type="submit">
</form>
